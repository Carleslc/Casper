<hr />

<div class="post-share">
    <h2>{{t "Share" }}</h2>
    <a href="https://twitter.com/intent/tweet?text={{encode title}}%20{{url absolute="true"}}" class="btn btn--twitter" title="Twitter" target="_blank">
        <i class="fab fa-twitter" aria-hidden="true"></i>
        <span>Twitter</span>
    </a>
    <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" class="btn btn--facebook" title="Facebook" target="_blank">
        <i class="fab fa-facebook-f" aria-hidden="true"></i>
        <span>Facebook</span>
    </a>
    <a href="https://www.linkedin.com/shareArticle?mini=true&url={{url absolute="true"}}" class="btn btn--linkedin" title="LinkedIn" target="_blank">
        <i class="fab fa-linkedin-in" aria-hidden="true"></i>
        <span>LinkedIn</span>
    </a>
</div>